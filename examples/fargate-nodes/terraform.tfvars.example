# Example terraform.tfvars file for EKS Cluster with Fargate Profiles
# Copy this file to terraform.tfvars and modify the values as needed

aws_region = "us-west-2"
cluster_name = "my-eks-fargate-cluster"
kubernetes_version = "1.28"
environment = "dev"
project = "eks-fargate-demo"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
az_count = 3

private_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24", 
  "10.0.3.0/24"
]

public_subnet_cidrs = [
  "10.0.101.0/24",
  "10.0.102.0/24",
  "10.0.103.0/24"
]

# Cluster Configuration
cluster_endpoint_public_access = true
cluster_endpoint_public_access_cidrs = ["0.0.0.0/0"]

enabled_cluster_log_types = [
  "api",
  "audit", 
  "authenticator",
  "controllerManager",
  "scheduler"
] 